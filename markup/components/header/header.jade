                                                        span.header__basket-item-desc
                                                            a(href="#").db.header__basket-item-title Пицца Мясника
                                                            span.header__basket-item-price 270₽
                                                            |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                            span.count
                                                                button.count__btn.count__btn_minus -
                                                                input(value='1').count__input
                                                                button.count__btn.count__btn_plus +
                                                    .header__basket-item
                                                        a(href="#").header__basket-item-img: +img('content/header__basket-item/1')
                                                        span.header__basket-item-desc
                                                            a(href="#").db.header__basket-item-title Пицца Мясника
                                                            span.header__basket-item-price 270₽
                                                            |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                            span.count
                                                                button.count__btn.count__btn_minus -
                                                                input(value='1').count__input
                                                                button.count__btn.count__btn_plus +
                                                    .header__basket-item
                                                        a(href="#").header__basket-item-img: +img('content/header__basket-item/1')
                                                        span.header__basket-item-desc
                                                            a(href="#").db.header__basket-item-title Пицца Мясника
                                                            span.header__basket-item-price 270₽
                                                            |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                            span.count
                                                                button.count__btn.count__btn_minus -
                                                                input(value='1').count__input
                                                                button.count__btn.count__btn_plus +
                                                    .header__basket-item
                                                        a(href="#").header__basket-item-img: +img('content/header__basket-item/2')
                                                        span.header__basket-item-desc
                                                            a(href="#").db.header__basket-item-title Пицца Мясника
                                                            span.header__basket-item-price 270₽
                                                            |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                            span.count
                                                                button.count__btn.count__btn_minus -
                                                                input(value='1').count__input
                                                                button.count__btn.count__btn_plus +
                                                br
                                                br
                                                button.header__basket-btn Оформить заказ

                                .sections-border-section(style="position: relative;")
                                    .header__listProfile.text-left
                                        - if(profile)
                                            a(href="#").header__listProfile-link
                                                .header__listProfile-link-ava: +img('content/personal', 'png')
                                            span.header__listProfile-notice Привет, Алексей! Давно не виделись!
                                        - else
                                            a(href="#").header__listProfile-link: +icon('user', 'svg-user', 21, 22)
                                        ul.header__listProfile-list
                                            li.selection: span: b Жан Мишель Жар
                                            li: a(href="#") Личный кабинет
                                            li: a(href="#") Любимые блюда
                                            li: a(href="#") Мои акции
