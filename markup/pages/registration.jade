extends main

block head
    - var headData = {title: "Регистрация"}
    - var index = {style: 2}

    link(href="%=static=%css/separate-css/jquery.datetimepicker.css", rel="stylesheet", type="text/css")

block content
    br
    br.hidden-sm-down
    .container
        .contacts
            p.title-default Регистрация
            form
                .form-group.form-group_success
                    .input-anim
                        input.form-control(value="Жан Мишель Жар")
                        labal.input-anim__label Ваше имя
                .form-group
                    .input-anim
                        input.form-control(value="janjan@gmail.com")
                        labal.input-anim__label E-mail

                .form-group.form-group_error
                    .input-anim
                        input.form-control(value="222")
                        labal.input-anim__label Телефон
                    labal.form-group__label Обязательное поле

                .form-group.form-group_default
                    .input-anim
                        input.form-control(type="password")
                        labal.input-anim__label Пароль

                .form-group.form-group_default
                    .input-anim
                        input.form-control(type="password")
                        labal.input-anim__label Подтверждение пароля
                .form-group.form-group_default
                    .input-anim
                        input.form-control
                        labal.input-anim__label Промо-код
                        span.input-anim__help(data-toggle="popover", data-content="Получайте бонусы при регистрации по промо коду") ?
                br
                p.title-default.title-default_marginMin.title-default_marginMin_small.title-default_small Ваш пол
                span.toggle-style
                    input(type="radio", name='a', checked, id='eeee').toggle-style__input.toggle-style__input_left
                    input(type="radio", name='a', id='ddddd').toggle-style__input.toggle-style__input_right
                    span
                        label(for="eeee").toggle-style__left Мужской
                    span
                        span.toggle-style__el
                    span
                        label(for="ddddd").toggle-style__right Женский

                br
                br
                p.title-default.title-default_marginMin.title-default_marginMin_small.title-default_small День Рождения
                div.dateView-content
                    .dateView
                        input.dateView__input(value="28.03.2017", data-setting='{"format":"d.m.Y", "timepicker":false}')
                        .dateView__section
                            .dateView__item.dateView__item_date
                                span.dateView_view-date 31 сентября
                                .dateView__item-icon: +icon('date', 'svg-date', 15, 13)
                    .dateView
                        input.dateView__input(value="21:00", data-setting='{"format":"H:i", "datepicker":false, "timepicker":true}')
                        .dateView__section
                            .dateView__item.dateView_view-H 21
                            .dateView__separator :
                            .dateView__item.dateView_view-i 18

                br
                br
                label.style-checkbox
                    input.style-checkbox__input(type="checkbox")
                    span.style-checkbox__el
                    span.style-checkbox__title.style-checkbox__title_big Подписаться на рассылку акций
                label.style-checkbox
                    input.style-checkbox__input(type="checkbox", checked)
                    span.style-checkbox__el
                    span.style-checkbox__title.style-checkbox__title_big Я принимаю условия
                        br
                        a(href="#").color-green Пользовательского соглашение
                br
                br
                p.title-default.title-default_marginMin.title-default_small Подтверждение номера
                .promo-code
                    .promo-code__input
                        .input-anim
                            input.form-control
                            labal.input-anim__label Код
                    .promo-code__btn
                        button.btn.btn-green.btn-sm Запросить код

                br.hidden-sm-down
                br
                button(disabled).btn.btn-green.btn-width.btn-md Зарегистрироваться

    //hr
    //.container
        .contacts
block script
    script(src="%=static=%js/separate-js/jquery.datetimepicker.full.js" type="text/javascript")
