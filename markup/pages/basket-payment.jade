extends main

include ../components/item/item

block head
    - var headData = {title: "Корзина"}

    link(href="%=static=%css/separate-css/jquery.datetimepicker.css", rel="stylesheet", type="text/css")

block content
    br
    .container
        .step
            .step__after
            .step__table
                .step__table-cell
                    a(href='#').step__item Корзина
                .step__table-cell
                    a(href='#').step__item Оформление заказа
                .step__table-cell.active
                    a(href='#').step__item Оплата
        br
        br
        .contacts
            p.title-default Заказ №5784 на сумму 1250₽
            form
                p.title-default.title-default_marginMin.title-default_marginMin_small.title-default_big Способ оплаты

                hr.contacts__hr
                .basket__label Вам доступно 156 миль
                br
                .row
                    .col-lg-6
                        span.toggle-style
                            input(type="radio", name='d', id='eeee1').toggle-style__input.toggle-style__input_left
                            input(type="radio", name='d', checked, id='ddddd1', data-toggle-block='#votss').toggle-style__input.toggle-style__input_right
                            span
                                label(for="eeee1").toggle-style__left Коплю
                            span
                                span.toggle-style__el
                            span
                                label(for="ddddd1").toggle-style__right Трачу
                    .col-lg-6
                        #votss(style="display: none;")
                            .inline-block(style="width: 95px;max-width: 100%;")
                                input.form-control(value="10")
                                labal.form-group__label.form-group__label_grey Сколько тратим?
                br
                br
                p.title-default.title-default_marginMin.title-default_big Итого к оплате
                .basket-resultPrice
                    span.basket-resultPrice__prev 1250₽
                    span 1240₽

                br
                br
                button.btn.btn-green.btn-width.btn-md Перейти к оплате




block script
    script(src="%=static=%js/separate-js/jquery.datetimepicker.full.js" type="text/javascript")
